                                        </StackPanel>
                                    </DataTemplate>

                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>

                                        <TextBlock HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   FontSize="18"
                                                   FontWeight="Black"
                                                   Foreground="Green"
                                                   Text="{Binding Quantity}" />


                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
